<h1>Your profile page</h1>
<p>Welcome, {{firstname}}!</p>
<content>
    <div class="profile-pic">
        <img src="../images/{{id}}.png" alt="Your profile pic" />
        <form action="/users/{{id}}" enctype="multipart/form-data" method="POST" class="pic-form">
        <input type="file" name="file">
        <input type="submit" value="Change the avatar">
        </form>
    </div>
    <div class="data-table">
        <table class="table table-condensed table-striped table-bordered">
            <tr>
                <td>Your real name:</td>
                <td>{{firstname}}</td>
            </tr>
            <tr>
                <td>Your email:</td>
                <td>{{email}}</td>
            </tr>
            <tr>
                <td>Your username:</td>
                <td>{{username}} </td>
            </tr>
            <tr>
                <td>Your role:</td>
                <td>{{role}}</td>
            </tr>
        </table>
    </div>
</content>
